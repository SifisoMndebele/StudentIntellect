<resources>
    <!-- Base application theme. -->
    <style name="Theme.StudentIntellect" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariantColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryVariantColor</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--<item name="colorSecondaryContainer">@color/red</item>
        <item name="colorOnSecondaryContainer">@color/purple</item>-->
        <item name="colorTertiaryContainer">#804BB5A2</item>
        <item name="colorOnTertiaryContainer">#E0F2F1</item>
        <!--<item name="colorSurface">@color/yellow</item>-->
        <item name="colorOnSurface">#C2DDDB</item>
        <item name="colorOnSurfaceVariant">#B2DFDB</item>
        <item name="colorOutline">#678885</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.App.TitleSmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.App.LabelLarge</item>
    </style>
    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="fontFamily">@font/sofia_pro_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sofia_pro_bold</item>
        <item name="android:textColor">#80CBC4</item>
    </style>
    <style name="Theme.StudentIntellect.LoadingBackground">
        <item name="android:background">#F7414141</item>
    </style>
</resources>